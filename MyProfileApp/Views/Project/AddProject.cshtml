@model MyProfileApp.Models.Project
@{
    ViewBag.Title = "Profie";
}

@if (Model.Id == 0)
{
    <h1>New Project</h1>
}
else
{
    <h1>Edit Project</h1>
}

@using (Html.BeginForm("SaveProject", "Profile"))
{
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Subtitle)
            @Html.TextBoxFor(m => m.Subtitle, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Subtitle)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.PersonId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
