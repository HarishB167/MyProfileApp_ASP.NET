@model MyProfileApp.Models.Experience
@{
    ViewBag.Title = "Profie";
}

@if (Model.Id == 0)
{
    <h1>New Experience</h1>
}
else
{
    <h1>Edit Experience</h1>
}

@using (Html.BeginForm("SaveExperience", "Experience"))
{
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Subtitle)
            @Html.TextBoxFor(m => m.Subtitle, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Subtitle)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Start)
            @Html.TextBoxFor(m => m.Start, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Start)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.End)
            @Html.TextBoxFor(m => m.End, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.End)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Responsibilities)
            @Html.TextBoxFor(m => m.Responsibilities, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Responsibilities)
        </div>
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.PersonId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
