@model MyProfileApp.ViewModels.SavePersonContactViewModel
@{
    ViewBag.Title = "Profie";
}

@if (Model.Person.Id == 0)
{
    <h1>New Profile</h1>
}
else
{
    <h1>Edit Profile</h1>
}

@using (Html.BeginForm("Save", "Profile"))
{
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.Person.Name)
            @Html.TextBoxFor(m => m.Person.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Person.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Person.ProfileStatement)
            @Html.TextBoxFor(m => m.Person.ProfileStatement, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Person.ProfileStatement)
        </div>
        <h4>Contact</h4>
        <div class="form-group">
            @Html.LabelFor(m => m.Contact.Phone)
            @Html.TextBoxFor(m => m.Contact.Phone, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Contact.Phone)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Contact.Address)
            @Html.TextBoxFor(m => m.Contact.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Contact.Address)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Contact.ProfileLink)
            @Html.TextBoxFor(m => m.Contact.ProfileLink, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Contact.ProfileLink)
        </div>
    </div>
    @Html.HiddenFor(m => m.Person.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
